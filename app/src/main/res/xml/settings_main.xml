<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/settings_category_default"
        android:inputType="text"
        android:key="@string/setting_category_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_category_label"/>
    <EditTextPreference
        android:defaultValue="@string/settings_numberOfBooks_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_numberOfBooks_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_numberOfBooks_label"/>
</PreferenceScreen>